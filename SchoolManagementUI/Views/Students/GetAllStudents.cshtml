@model Application_API_Core.ViewModels.StudentListDto
   
@{
    ViewData["Title"] = "GetAllStudents";
    Layout = "_Layout";
}

<div>
    @if(Model.Students != null)
    {
        <div class="container">
            <table class="table">
                <tr>
                    <th>
                       First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Matric Number
                    </th>
                    <th>
                        Student Level
                    </th>

                </tr>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => student.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => student.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => student.MatricNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => student.StudentLevel)
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
           
        </div>
    }
</div>